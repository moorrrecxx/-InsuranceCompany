@page
@model InsuranceCompany.Web.Pages.Clients.CreateModel
@{
	ViewData["Title"] = "Create Client";
}
<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-6">

			<div class="card shadow-sm border-0 rounded-3">
				<div class="card_header bg-white border-0 pt-4 px-4">
					<h2 class="text-primary fw-light mb-0">New client</h2>
					<p class="text-muted small">Enter client information</p>
				</div>

				<div class="card-body p-4">
					<form method="post">

						<div class="mb-3">
							<label class="form-label fw-bold text-secondary">Full name</label>
							<input asp-for="NewClient.full_name" class="form-control form-control-lg" placeholder="Enter Full name" required />
							<span asp-validation-for="NewClient.full_name" class="text-danger small"></span>
						</div>

						<div class="mb-3">
							<label class="form-label fw-bold text-secondary">Email</label>
							<input asp-for="NewClient.email" type="email" class="form-control form-control-lg" placeholder="exem@gmail.com" required />
							<span asp-validation-for="NewClient.email" class="text-danger small"></span>
						</div>

						<div class="mb-3">
							<label class="form-label fw-bold text-secondary">Phone</label>
							<input asp-for="NewClient.phone" type="phone" class="form-control form-control-lg" placeholder="+380000000000" required />
							<span asp-validation-for="NewClient.phone" class="text-danger small"></span>
						</div>

						<div class="mb-3">
							<label class="form-label fw-bold text-secondary">Birth date</label>
							<input asp-for="NewClient.birth_date"  class="form-control form-control-lg" placeholder="01-01-2006" required />
							<span asp-validation-for="NewClient.birth_date" class="text-danger small"></span>
						</div>

						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary btn-lg shadow-sm">Create Client</button>
							<a asp-page="Index" class="btn btn-light btn-lg text-muted">Cancel</a>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
