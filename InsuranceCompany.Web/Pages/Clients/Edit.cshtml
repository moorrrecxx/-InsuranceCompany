@page
@model InsuranceCompany.Web.Pages.Clients.EditModel
@{
	ViewData["Title"] = "Edit Client";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h2 class="text-primary fw-light mb-0">Редагування</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">

                        <input type="hidden" asp-for="EditClient.client_id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold text-secondary">Full Name</label>
                            <input asp-for="EditClient.full_name" class="form-control" />
                            <span asp-validation-for="EditClient.full_name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-secondary">Email</label>
                            <input asp-for="EditClient.email" class="form-control" />
                            <span asp-validation-for="EditClient.email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-secondary">Phone</label>
                            <input asp-for="EditClient.phone" class="form-control" />
                            <span asp-validation-for="EditClient.phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-secondary">Birth date</label>
                            <input asp-for="EditClient.birth_date" class="form-control" />
                            <span asp-validation-for="EditClient.birth_date" class="text-danger"></span>
                        </div>


                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Confirm</button>
                            <a asp-page="./Index" class="btn btn-light btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>